{
    "name": "argo-trading",
    "description": "HTML5 interface for the OANDA platform",
    "version": "5.0.2",
    "main": "./main.js",
    "bin": {
        "argo-trading": "./bin/argo-trading",
        "argo-trading-standalone": "./bin/argo-trading-standalone"
    },
    "preferGlobal": true,
    "repository": "git@github.com:albertosantini/argo.git",
    "keywords": [
        "trading",
        "forex",
        "fxtrade",
        "oanda"
    ],
    "author": "Alberto Santini",
    "license": "MIT",
    "engines": {
        "node": ">=6"
    },
    "dependencies": {
        "async": "~2.4.0",
        "body-parser": "~1.17.1",
        "express": "~4.15.2",
        "faye-websocket": "~0.11.1",
        "flic": "~1.3.7",
        "limiter": "~1.1.0",
        "request": "~2.81.0",

        "angular": "~1.6.4",
        "angular-mocks": "~1.6.4",
        "d3": "~4.8.0",
        "techan": "~0.8.0",
        "tachyons": "~4.7.2"
    },
    "optionalDependencies": {
        "electron": "~1.6.7"
    },
    "scripts": {
        "test": "npm run lint && npm run karma",
        "start": "node src/server/app.js",
        "debug": "node --inspect src/server/app.js",
        "electron": "electron .",
        "lint": "eslint main.js karma.conf.js src/**/*.js",
        "karma": "karma start --single-run",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "rollup": "rollup -c",
        "rollup-d3": "rollup -c rollup.config.d3-techan.js && squash build/d3-techan.js > build/d3-techan.min.js"
    },
    "devDependencies": {
        "conventional-changelog-cli": "^1.3.1",
        "eslint": "^3.19.0",
        "eslint-plugin-angular": "^2.4.0",
        "mocha": "^3.3.0",
        "chai": "^3.5.0",
        "karma": "^1.7.0",
        "karma-mocha": "^1.3.0",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^2.1.1",
        "rollup": "^0.41.6",
        "rollup-plugin-node-resolve": "^3.0.0",
        "butternut": "^0.4.0"
    }
}
